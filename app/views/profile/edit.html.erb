<div class="profile-container d-flex justify-content-center">
    <div class="profile-body">
        <div class="avatar-section d-flex align-items-center">
            <div class="avatar-img">
                <%= image_tag "avatar.jpeg" %>
            </div>
            <div class="details">
                <div class="email">
                    <%= Current.user.email %>
                </div>
                <div class="role">
                    <%= Current.user.role %>
                </div>
            </div>
        </div>
        <%= form_with model: Current.user, url: profile_edit_path do |form| %>

            <% if form.object.errors.any? %>
                <div class="alert alert-danger">
                    <% form.object.errors.full_messages.each do |msg|%>
                        <div><%= msg %></div>
                    <%end%>
                </div>
            <%end%>

            <div class="d-flex justify-content-between mb-3">
                <div class="equal">
                    <%= form.label :name%>
                    <%= form.text_field :name, class:"form-control"%>
                </div>
                <div class="equal">
                    <%= form.label :phone%>
                    <%= form.text_field :phone, class:"form-control"%>
                </div>
            </div>
            <div class="mb-3">
                <%= form.label :address%>
                <%= form.text_field :address, class:"form-control"%>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <div class="eq-2">
                    <%= form.label :state%>
                    <%= form.text_field :state, class:"form-control"%>
                </div>
                <div class="eq-2">
                    <%= form.label :postcode%>
                    <%= form.text_field :postcode, class:"form-control"%>
                </div>
                <div class="eq-2">
                    <%= form.label :city%>
                    <%= form.text_field :city, class:"form-control"%>
                </div>
            </div>

            <div class="d-flex justify-content-end w-100 mt-4">
                <%= form.submit "Save Changes", class:"btn btn-outline-primary" %>
            </div>
        <%end%>
    </div>
</div>